.product-item {
    display: flex;
    /* Keep the default direction (row) for horizontal layout */
    align-items: center; /* Center align the content vertically */
    margin-bottom: 10px; /* Adjust spacing between products */
    padding: 5px; /* Add padding to the product item for better spacing */
    border-bottom: 1px solid #ddd; /* Add a border at the bottom for separation */
    overflow: hidden; /* Ensure rounded corners even if the image overflows */
}

.product-image {
    width: 70px; /* Set a fixed width for the product image */
    height: auto; /* Maintain aspect ratio */
    margin-right: 10px; /* Adjust spacing between image and details */
}

.product-details {
    text-align: left; /* Align the details to the left */
    flex-grow: 1; /* Allow details to take available space */
}

.product-details a {
    font-size: 15px; /* Adjust the font size for the product name */
    text-decoration: none;
    color: #000000;
    background-color: #FFFFFF;
    padding: 5px; /* Add padding for better visibility */
    border-radius: 5px; /* Add border-radius for a rounded look */
}

.product-price {
    color: #7db702;
    font-size: 12px; /* Adjust the font size for the product price */
    margin-top: 3px; /* Adjust spacing between name and price */
}

.product-list2 {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .product-item2 {
        width: calc(25% - 20px); /* Set width for four items per row with spacing */
        margin-bottom: 20px;
        box-sizing: border-box;
        border-radius: 10px; /* Apply border-radius similar to product list */
        overflow: hidden;
        transition: transform 0.9s;
        border: 1px solid #ddd; /* Add border to each product item */
    }

    .product-item2:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-image2 {
        width: 100%;
        height: 250px; /* Set the desired height for larger images */
        object-fit: cover;
        border-radius: 10px 10px 0 0; /* Apply border-radius to the top corners */
    }

    .product-details2 {
        padding: 10px;
        text-align: center;
        background-color: #ffffff; /* Set the background color to white */
        border-radius: 0 0 10px 10px; /* Apply border-radius to the bottom corners */
    }

    .product-details2 a {
        font-size: 15px;
        text-decoration: none;
        color: #000000;
        background-color: #FFFFFF;
        padding: 5px;
