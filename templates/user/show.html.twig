{% extends 'admin.html.twig' %}

{% block title %}User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            width: 50%;
            margin: 50px auto;
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .back-link, .edit-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

        .back-link {
            background-color: #4CAF50;
            color: white;
        }

        .back-link:hover {
            background-color: #45a049;
        }

        .edit-link {
            background-color: #008CBA;
            color: white;
        }

        .edit-link:hover {
            background-color: #0077A3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>User</h1>

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_index') }}" class="back-link">Back to list</a>

   

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
