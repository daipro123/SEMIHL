{% extends 'admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            width: 50%;
            margin: 50px auto;
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .back-link, .edit-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

        .back-link {
            background-color: #4CAF50;
            color: white;
        }

        .back-link:hover {
            background-color: #45a049;
        }

        .edit-link {
            background-color: #008CBA;
            color: white;
        }

        .edit-link:hover {
            background-color: #0077A3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Product</h1>

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ product.name }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ product.price }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ product.image }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ product.description }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_product_index') }}" class="back-link">Back to list</a>

        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="edit-link">Edit</a>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}
