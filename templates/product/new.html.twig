{% extends 'admin.html.twig' %}

{% block title %}New Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            width: 50%;
            margin: 50px auto;
            text-align: center;
        }

        h1 {
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label {
            margin-top: 10px;
            font-weight: bold;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        .btn, .back-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

        .btn {
            background-color: #4CAF50;
            color: white;
        }

        .btn:hover {
            background-color: #45a049;
        }

        .back-link {
            background-color: #008CBA;
            color: white;
        }

        .back-link:hover {
            background-color: #0077A3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Create New Product</h1>

        {{ include('product/_form.html.twig') }}

        <a href="{{ path('app_product_index') }}" class="back-link">Back to list</a>
    </div>
{% endblock %}
