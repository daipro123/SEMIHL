{% extends 'base.html.twig' %}

{% block title %}Đăng nhập{% endblock %}

{% block stylesheets %}
  <style>
 /* custom.css */

body {
    background-color: white;
    margin: 0; /* Đặt lề thành 0 */
}

.login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80vh;
    margin-top: 10px;
    margin-bottom: 10px;
}

.login-form {
    width: 400px;
    padding: 20px;
    background-color: #f5f5f5;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin: 0; /* Đặt lề thành 0 */
}

.login-title {
    text-align: center;
    margin-bottom: 10px;
    color: #7db702; /* Màu chính của bạn */
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    font-weight: bold;
}

.form-group input[type="username"],
.form-group input[type="password"] {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 3px;
}

.form-group input[type="checkbox"] {
    display: inline-block;
    width: auto;
    margin-top: 5px;
}

.login-form button[type="submit"] {
    display: block;
    width: 100%;
    padding: 8px;
    background-color: #7db702; /* Màu chính của bạn */
    color: #fff;
    border: none;
    border-radius: 3px;
    cursor: pointer;
}

.signup-link {
    text-align: center;
    margin-top: 10px;
}

</style>
{% endblock %}

{% block body %}

<div class="login-container">
    <form method="post" class="login-form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="logged-in">
              
            </div>
        {% endif %}
        <h1 class="login-title">Đăng nhập</h1>
        <div class="form-group">
            <label for="inputUsername">Tên người dùng</label>
            <input type="username" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword">Mật khẩu</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-primary btn-block" type="submit">
            Đăng nhập
        </button>
        <div class="signup-link">
            Chưa có tài khoản? <a href="{{ path('app_register') }}">Đăng ký</a>
        </div>
    </form>
</div>

{% endblock %}
